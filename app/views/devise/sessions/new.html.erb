<div class="container mb-5">

  <div class="container register">
    <div class="row">
      <div class="col-md-3 register-left">
        <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt=""/>
        <h3>Welcome</h3>
        <p>Thank you for Coming Back!</p>
        <%= link_to "Log in", new_session_path(:user), class: 'btn btn-primary white_button_input' %></<br/>
      </div>
      <div class="col-md-9 register-right">
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <h3 class="register-heading">A Little About You</h3>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <%= f.error_notification %>
            <div class="row register-form">
              <div class="col-md-6">

                <div class="form-group">
                  <%= f.input :email, class: "form-control", required: false, autofocus: true, input_html: { autocomplete: "email" } %>

                </div>

                <div class="form-group">

                  <%= f.input :password, class: "form-control", required: false, input_html: { autocomplete: "current-password" } %>
                </div>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                <%= f.button :submit, "Log in", class: "btnRegister" %>
              </div>

              <% end %>

            </div>
          </div>

        </div>

      </div>
    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>
