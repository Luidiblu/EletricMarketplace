<div class="container">
  <% unless @is_rentable || @product.rentable %>
    <%= simple_form_for @product, wrapper_mappings: { check_boxes: :vertical_collection, radio_buttons: :vertical_collection, file: :custom_file, boolean: :custom_boolean_switch } do |f| %>
      <%= f.error_notification %>

      <%= f.input :name %>

      <%= f.input :category, as: :radio_buttons, collection: ["Car", "Charging Station"]  %>
      <%= f.input :price %>

      <%= f.input :description %>

      <%= f.input :photo, label_html: { class: 'btn disabled' } %>
      <%= f.input :photo_cache, as: :hidden %>

      <%= f.button :submit, class: "btn-primary" %>
      <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
    <% end %>
  <% else %>
    <%= simple_form_for @product, wrapper_mappings: { check_boxes: :vertical_collection, radio_buttons: :vertical_collection, file: :custom_file, boolean: :custom_boolean_switch } do |f| %>
      <%= f.error_notification %>

      <%= f.input :name %>

      <%= f.input :category, as: :radio_buttons, collection: ["Car", "Charging Station"]  %>
      <%= f.input :price, hint: "test" %>

      <%= f.input :billing_period, as: :radio_buttons, collection: ["Monthly", "Weekly"] %>

      <%= f.input :description %>

      <%= f.input :photo, label_html: { class: 'btn disabled' } %>
      <%= f.input :photo_cache, as: :hidden %>

      <%= f.button :submit, class: "btn-primary" %>
      <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
    <% end %>
  <% end %>
</div>
