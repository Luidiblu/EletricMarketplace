<div class="container">
  <div class="row">
      <% @products.each do |product| %>
        <div class="col-12 col-sm-4 w-100">
        <%= link_to product do %>
            <% photo = product.photo.url ? product.photo.url : "https://img.ibxk.com.br///2019/02/01/01171157507271-t1200x480.jpg" %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path photo %>'); margin-bottom:30px">
            <div class="card-category">$ <%= product.price %></div>
            <div class="card-description">
              <h2><%= product.name %></h2>
            </div>
            <img class="card-user" src="https://i.imgur.com/b8pzICM.png">
          </div>
        <% end %>
       </div>
      <% end %>
  </div>
</div>
